{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build.bat ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Upload",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/upload.bat ${workspaceFolder} COM21",
            "dependsOn": "Build",
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Upload & Monitor",
            "type": "shell",
            "command": "plink -serial COM15 -sercfg 9600,8,1,N,N",
            "dependsOn": "Upload",
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Monitor",
            "type": "shell",
            "command": "plink -serial COM15 -sercfg 9600,8,1,N,N",
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
